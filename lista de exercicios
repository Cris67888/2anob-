programa {
  funcao inicio() {
    //declaracao de variaveis
      real  nota1,nota2,nota3,nota4,media_arimetica
      //entrada de dados
      escreva("informe a primeira nota1")
      leia(nota1)
      escreva("informe a primeira nota2")
      leia(nota2)
      escreva("informe a primeira nota3")
      leia(nota3)
      escreva("informe a primeira nota4")
      leia(nota4)
      //processamento
      media_arimetica=(nota1 + nota2 + nota3 + nota4)/4
      //saida dos dados
      escreva("a media arimetica e:media_arimetica")
  }
}
programa {
  funcao inicio() {
    //Declaração de variáveis 
    real janeiro,fevereiro,marco,media_Aritmetica

    //Entrada de dados
    escreva("Informe o valor gasto em janeiro")
    leia (janeiro)
    escreva("Informe o valor gasto em fevereiro")
    leia(fevereiro)
    escreva("Informe o valor gasto em março")

    //Processamento 
    media_Aritmetica= janeiro+fevereiro+marco

    //Saída de dados 
    escreva("A média aritmética é", media_Aritmetica)
  }
}
programa {
  funcao inicio() {
    //Declaração de variáveis
    real altura,peso_ideal
    
    //Declaração de constante
    const real k=72.7
    const  inteiro b=58

    //Entrada de dados 
    escreva("Informe a altura")
    leia(altura)

    //Processamento
    peso_ideal= k*altura-b

    //Saída de dados
    escreva("O seu peso ideal é", peso_ideal)
 


  }
}
//Declaração de variável
    real raio, diametro, comprimento, area

    //Entrada de Dados
    escreva("Informe o valor do raio: ")
    leia(raio)

    //Processamento
    diametro = raio * 2
    comprimento = 3.14 * diametro
    area = (raio * raio) * 3.14

    //Saida de Dados
    escreva("Com o raio ", raio , " o diametro sera " , diametro, " o comprimento sera ", comprimento, " e area sera ", area )
